{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es7"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "downlevelIteration": true,
    "outDir": "./target/build",
    "rootDir": "./src",
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "**/node_modules/*",
    "node_modules",
    "public/*"
  ],
  "include": [
    "src/**/*",
    "public/sw.ts"
  ]
}
