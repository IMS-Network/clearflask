<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>connect</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <includes>
                <include>package.json</include>
                <include>tsconfig.json</include>
            </includes>
            <outputDirectory>${file.separator}</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}${file.separator}src</directory>
            <outputDirectory>${file.separator}src</outputDirectory>
            <excludes>
                <exclude>test.js</exclude>
                <exclude>greenlock.d</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}${file.separator}node_modules</directory>
            <outputDirectory>${file.separator}node_modules</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}${file.separator}dist</directory>
            <outputDirectory>${file.separator}dist</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
