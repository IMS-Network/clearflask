<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>local-run</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/test/resources</directory>
            <includes>
                <include>logback-dev.xml</include>
                <include>logging-dev.properties</include>
            </includes>
            <outputDirectory>/server/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/test/resources</directory>
            <includes>
                <include>killbill-setenv2.sh</include>
                <include>logging-dev.properties</include>
                <include>logback-killbill-engine.xml</include>
                <include>killbill.sh</include>
            </includes>
            <outputDirectory>/killbill-engine/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/kb-plugins</directory>
            <outputDirectory>/killbill-engine/autoload</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/kb-ddl/plugins.sql</source>
            <outputDirectory>/killbill-db/</outputDirectory>
        </file>
        <file>
            <source>${project.parent.basedir}/COPYING</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
